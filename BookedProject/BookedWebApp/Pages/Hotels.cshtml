@page
@model BookedWebApp.Pages.HotelsModel
@{
	Layout = "_HomeLayout";
}


<div class="container mt-5">
    <form class="d-flex justify-content-between align-content-center" method="get" asp-page="./Hotels">
        <div class="input-group-text h-25 w-75">
            <input type="text" class="form-control" placeholder="Search" asp-for="query">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
        <div class="input-group-text h-25">
            <label for="sort" class="me-2">Sort:</label>
            <select class="form-select" asp-for="SortOrder">
                <option value="name">Name</option>
                <option value="price_asc">Price: Low to High</option>
                <option value="price_desc">Price: High to Low</option>
            </select>
        </div>
    </form>
</div>


<div class="container m-5">
    @if (Model.ListHotel != null)
    {
        <div class="row">
            @foreach (var hotel in Model.ListHotel)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <img class="card-img-top" src="@($"data:image/png;base64,{Convert.ToBase64String(hotel.Image)}")" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@hotel.Name</h5>
                            <p class="card-text">Price per night: @hotel.PricePerNight</p>
                            <a class="btn btn-primary" asp-page="/HotelDetails" asp-route-id="@hotel.HotelId">More details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
    }
</div>


