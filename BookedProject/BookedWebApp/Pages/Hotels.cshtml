        <div class="input-group-text w-100 w-lg-25">
            <label class="me-2 form-label mb-0 text-black">Check-in:</label>
            <input asp-for="CheckInDate" type="date" class="form-control" value="">
        </div>
        <div class="input-group-text w-100 w-lg-25">
            <label class="me-2 form-label mb-0 text-black">Check-out:</label>
            <input asp-for="CheckOutDate" type="date" class="form-control" value="">
        </div> -->
    </form>
</div>


<div class="container m-5">
    @if (Model.ListHotel != null)
    {
        <div class="row">
            @foreach (var hotel in Model.ListHotel)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <img class="card-img-top" src="@($"data:image/png;base64,{Convert.ToBase64String(hotel.Image)}")" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@hotel.Name</h5>
                            <p class="card-text">Price per night: @hotel.PricePerNight</p>
                            <a class="btn btn-primary" asp-page="/HotelDetails" asp-route-id="@hotel.HotelId" asp-route-checkInDate="@Model.CheckInDate.ToString("yyyy-MM-dd")" asp-route-checkOutDate="@Model.CheckOutDate.ToString("yyyy-MM-dd")">More details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No Hotels found</p>
    }
</div>


