@page
@model BookedWebApp.Pages.FlightDetailsModel
@{
}

<div class="container justify-content-center align-content-center">
	<div>
		<h1>@Model.Flight.AirlineName</h1>
		<p>@Model.Flight.DepartureAirport</p>
		<p>@Model.Flight.DepartureCountry</p>
		<p>@Model.Flight.ArrivalAirport</p>
		<p>@Model.Flight.ArrivalCountry</p>
	</div>

	<form class="d-flex flex-column" method="post">
		<input type="hidden" name="id" value="@Model.Flight.FlightId" />
		<!--Submit button-->
		<div class="d-flex align-items-center justify-content-center pt-2">
			<button type="submit" class="btn-primary">
				Book now
			</button>
		</div>
	</form>
</div>