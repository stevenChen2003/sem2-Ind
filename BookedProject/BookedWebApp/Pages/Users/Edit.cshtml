@page
@model BookedWebApp.Pages.Users.EditModel
@{
}

<div class="container">
    <h2>Edit Form</h2>
    <div>
        <p class="text-danger">@ViewData["Message"]</p>
    </div>
    <form method="post">
        <input asp-for="UpdateUser.UserId"  type="hidden" value="@Model.UpdateUser.UserId">
        <div class="mb-3">
            <label asp-for="UpdateUser.FirstName" class="form-label">First Name: </label>
            <span class="text-danger" asp-validation-for="UpdateUser.FirstName"></span>
            <input asp-for="UpdateUser.FirstName" class="form-control" value=@Model.UpdateUser.FirstName>
        </div>

        <div class="mb-3">
            <label asp-for="UpdateUser.LastName" class="form-label">Last Name: </label>
            <span class="text-danger" asp-validation-for="UpdateUser.LastName"></span>
            <input asp-for="UpdateUser.LastName" class="form-control" value="@Model.UpdateUser.LastName">
        </div>

        <div class="mb-3">
            <label asp-for="UpdateUser.DateOfBirth" class="form-label">Date of Birth: </label>
            <span class="text-danger" asp-validation-for="UpdateUser.DateOfBirth"></span>
            <input type="date" asp-for="UpdateUser.DateOfBirth" class="form-control" value="@Model.UpdateUser.DateOfBirth.ToString("yyyy-MM-dd")">
        </div>

        <div class="mb-3">
            <label asp-for="UpdateUser.PhoneNumber" class="form-label">Phone Number: </label>
            <span class="text-danger" asp-validation-for="UpdateUser.PhoneNumber"></span>
            <input type="tel" asp-for="UpdateUser.PhoneNumber" class="form-control" value="@Model.UpdateUser.PhoneNumber">
        </div>

        <div class="mb-3">
            <label asp-for="UpdateUser.Email" class="form-label">Email: </label>
            <span class="text-danger" asp-validation-for="UpdateUser.Email"></span>
            <input type="email" asp-for="UpdateUser.Email" class="form-control" value="@Model.UpdateUser.Email" readonly>
        </div>

        <div class="clearfix">
            <div class="float-start">
                <button type="submit" asp-page-handler="Update" class="btn btn-primary" style="width: 150px;">Change</button>
            </div>
            <div class="float-end">
                <button type="submit" asp-page-handler="Delete" class="btn btn-primary" style="width: 150px;">Delete Account</button>
            </div>
        </div>
    </form>
</div>