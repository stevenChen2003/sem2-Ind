@page
@model BookedWebApp.Pages.Users.EditModel
@{
}

<div class="container">
    <h2>Edit Form</h2>
    <div>
        <p class="text-danger">@ViewData["Message"]</p>
    </div>
    <form method="post">
        <div class="mb-3">
            <label asp-for="user.FirstName" class="form-label">First Name: </label>
            <span class="text-danger" asp-validation-for="user.FirstName"></span>
            <input asp-for="user.FirstName" class="form-control" value=@Model.user.FirstName>
        </div>

        <div class="mb-3">
            <label asp-for="user.LastName" class="form-label">Last Name: </label>
            <span class="text-danger" asp-validation-for="user.LastName"></span>
            <input asp-for="user.LastName" class="form-control" value="@Model.user.LastName">
        </div>

        <div class="mb-3">
            <label asp-for="user.DateOfBirth" class="form-label">Date of Birth: </label>
            <span class="text-danger" asp-validation-for="user.DateOfBirth"></span>
            <input type="date" asp-for="user.DateOfBirth" class="form-control" value="@Model.user.DateOfBirth.ToString("yyyy-MM-dd")">
        </div>

        <div class="mb-3">
            <label asp-for="user.PhoneNumber" class="form-label">Phone Number: </label>
            <span class="text-danger" asp-validation-for="user.PhoneNumber"></span>
            <input type="tel" asp-for="user.PhoneNumber" class="form-control" value="@Model.user.PhoneNumber">
        </div>

        <div class="mb-3">
            <label asp-for="user.Email" class="form-label">Email: </label>
            <span class="text-danger" asp-validation-for="user.Email"></span>
            <input type="email" asp-for="user.Email" class="form-control" value="@Model.user.Email" readonly>
        </div>

        <button type="submit" class="btn btn-primary">Change</button>
        <button type="submit" name="delete" class="btn btn-primary">Delete Account</button>
    </form>
</div>